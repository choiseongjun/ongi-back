# Server Configuration
PORT=3000
ENVIRONMENT=development

# Database Configuration
# For local development (without Docker): use localhost
# For Docker: use postgres (service name)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ongi_db
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# Kakao OAuth Configuration
# The backend only validates the access token provided by the client
# No Kakao API credentials needed in backend
KAKAO_API_URL=https://kapi.kakao.com/v2/user/me
